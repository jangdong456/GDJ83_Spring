<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

		<!-- 클래스명 변수명 = new 생성자();
	 <bean> -> 객체를 만드는 얘
	 FQDN -> 풀패키지 라는 위미
	 -->
	 
	  <!-- 클래스명.참조변수
	  	클래스명 : "com.jang.app.robot.RightArm" 
	  	참조변수 : id="rightArm"
	    -->
	<bean class="com.jang.app.robot.LeftArm" id="leftArm"></bean>
	
	<bean class="com.jang.app.robot.RightArm" id="rightArm"></bean>
	
	 
	<bean class="com.jang.app.robot.Wheel" id="wheel">
		<!-- 1. 인덱스로 매개변수 구분해서 넣는방법
		<constructor-arg index="0" value="50"></constructor-arg>
		<constructor-arg index="1" value="sk"></constructor-arg>
		<constructor-arg index="2" value="2"></constructor-arg>
		-->
		<!-- 2.데이터 타입으로 매개변수 구분해서 넣는방법
		<constructor-arg type="int" value=""></constructor-arg>
		-->
		<!-- 3. 매개변수 이름으로 구분해서 넣는방법 -->
		<constructor-arg name="size" value="50"></constructor-arg>
		<constructor-arg name="brand" value="sk"></constructor-arg>
		<constructor-arg name="count" value="1"></constructor-arg>
	</bean>
	
	<bean class="com.jang.app.robot.Robot" id="robot">
	
		<!--  name = setter이름 -->
		<!--  value : primitive type의 값 과 String 값-->
		<!--  ref :  -->
		<!--  property : 속성 -->
		<property name="company" value="DooSan"></property>
		<property name="age" value="20"></property>
		<property name="leftArm" ref="leftArm"></property>
		<property name="rightArm" ref="rightArm"></property>
	</bean>
</beans>
